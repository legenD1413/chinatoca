generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 报价请求表
model Quote {
  id                Int      @id @default(autoincrement())
  fullName          String
  email             String
  phone             String
  website           String
  productCategory   String?
  ecommercePlatform String
  shipmentsPerMonth String
  concerns          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

// 联系表单表
model Contact {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  phone     String
  website   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
